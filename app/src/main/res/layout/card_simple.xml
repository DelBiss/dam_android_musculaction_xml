<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="data"
            type="ca.philrousse.android02.musculaction.data.entity.views.ICard" />
        <variable
            name="image"
            type="Integer"
            />
        <variable
            name="image_small"
            type="Integer"
            />
    </data>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/materialCardViewElevatedStyle"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <!-- Media -->
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="2"
                android:background="?attr/colorPrimaryContainer"
                android:contentDescription="@{data.name}"
                android:scaleType="centerCrop"
                app:imageResource="@{image}"
                tools:srcCompat="@drawable/_intro_abducteurs_machine"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{data.name}"
                    android:layout_weight="1"
                    android:padding="16dp"
                    android:layout_gravity="center_vertical"
                    tools:text="Exercices abdominaux"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    />



        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>